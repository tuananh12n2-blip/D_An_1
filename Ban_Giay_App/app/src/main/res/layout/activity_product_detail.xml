<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#006C67"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sản phẩm"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageView
            android:id="@+id/imgBell"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bell"
            android:padding="4dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="200dp"
        android:layout_below="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ảnh sản phẩm -->
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#F5F5F5"
                android:layout_marginBottom="16dp" />

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giày Sneaker CROON CR16 Unisex"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Brand -->
            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Croon"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginBottom="12dp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★"
                    android:textSize="20sp"
                    android:textColor="#FFD700"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(5.0)"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/txtPriceOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá gốc: 680,000₫"
                    android:textSize="16sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtPriceNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá khuyến mãi: 480,000₫"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E53935" />
            </LinearLayout>

            <!-- Kích thước -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kích thước:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/layoutSizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnSize37"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="37"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_size_button"
                    android:textColor="#FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnSize38"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="38"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_size_button"
                    android:textColor="#FFFFFF"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnSize39"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="39"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_size_button"
                    android:textColor="#FFFFFF"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Số lượng -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnDecrease"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="-"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_quantity_button"
                    android:textColor="#FFFFFF"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:text="1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:elevation="4dp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnIncrease"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_quantity_button"
                    android:textColor="#FFFFFF"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- Nút Thêm vào giỏ -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="THÊM VÀO GIỎ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_marginBottom="12dp" />

            <!-- Nút Mua ngay -->
            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="MUA NGAY"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="5"
        android:elevation="10dp"
        android:paddingTop="4dp"
        android:gravity="center">

        <!-- Trang chủ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#000000"
                android:src="@drawable/ic_home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="11sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Danh mục -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#000000"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textSize="11sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Giỏ hàng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:tint="#000000"
                android:src="@drawable/ic_cart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng"
                android:textSize="11sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Trợ giúp -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:tint="#000000"
                android:src="@drawable/ic_help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trợ giúp"
                android:textSize="11sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Tài khoản -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:tint="#000000"
                android:src="@drawable/ic_user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textSize="11sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

