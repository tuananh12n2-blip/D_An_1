<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thanh toán"
            android:textColor="#006C67"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:layout_below="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Selected Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/imgPaymentMethod"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_credit_card"
                    app:tint="#006C67"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/txtPaymentMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thẻ tín dụng"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Cardholder Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên chủ thẻ"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtCardholderName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Tên chủ thẻ"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/bg_input_field"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="textCapWords" />

            <!-- Card Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số thẻ"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtCardNumber"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Số thẻ"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/bg_input_field"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="number"
                android:maxLength="19" />

            <!-- Expiry Date and CVV -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MM/YY"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="MM/YY"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:background="@drawable/bg_input_field"
                        android:padding="16dp"
                        android:inputType="number"
                        android:maxLength="5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CVV"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edtCVV"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="CVV"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:background="@drawable/bg_input_field"
                        android:padding="16dp"
                        android:inputType="number"
                        android:maxLength="4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Confirm Payment Button -->
    <Button
        android:id="@+id/btnConfirmPayment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:text="Xác nhận thanh toán"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#006C67"
        android:layout_margin="16dp" />

</RelativeLayout>

